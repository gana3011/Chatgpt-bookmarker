{
  "manifest_version": 2,
  "name": "ChatGPT Bookmarker - Final",
  "version": "1.2",
  "description": "Bookmark and navigate to ChatGPT messages using stable message IDs.",
  "permissions": ["storage", "activeTab", "tabs"],
  "browser_specific_settings": {
    "gecko": {
      "id": "promptpin@yourdomain.com"
    }
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "PromptPin",
    "default_icon": {
      "16": "assets/icons/prompt_pin_16x16.png",
      "48": "assets/icons/prompt_pin_48x48.png",
      "128": "assets/icons/prompt_pin_128x128.png"
    }
  },
  "icons": {
    "16": "assets/icons/prompt_pin_16x16.png",
    "48": "assets/icons/prompt_pin_48x48.png",
    "128": "assets/icons/prompt_pin_128x128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    "assets/bookmark-dark.svg",
    "assets/bookmark-light.svg",
    "assets/clear-dark.svg",
    "assets/clear-light.svg"
  ]
}
